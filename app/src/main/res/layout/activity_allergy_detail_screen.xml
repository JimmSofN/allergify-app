<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.AllergyDetailScreen">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/filled_icon_btn_desc"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:icon="@drawable/arrow_back_24px"
            app:iconTint="?attr/colorOnSecondaryContainer" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/activity_allergy_detail_screen_textview_heading"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="32sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImage"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="312dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scannedfoodimage"
                    app:shapeAppearanceOverlay="@style/corneredImageView" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/activity_allergy_detail_screen_textview_composition" />

                <TextView
                    android:id="@+id/compositionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/activity_allergy_detail_screen_textview_composition_example" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/activity_allergy_detail_screen_textview_nutrition" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_calories" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/calorieText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_calories_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_fat" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/fatText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_fat_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_carbohydrate" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/carbsText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_carbohydrate_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_protein" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/proteinText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_protein_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_sugar" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/sugarText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_sugar_value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_salt" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_weight="0"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_divider" />

                    <TextView
                        android:id="@+id/saltText"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/activity_allergy_detail_screen_textview_nutrition_salt_value" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/activity_allergy_detail_screen_textview_allergen" />

                <TextView
                    android:id="@+id/allergenText"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/activity_allergy_detail_screen_textview_allergen_value" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>